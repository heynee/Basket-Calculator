<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.silver.basketcalculator.MainActivity"
    android:paddingStart="10sp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/textView1"
        android:id="@+id/textView1"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="4.20"
        android:id="@+id/textSubtractee"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView1"
        android:layout_marginStart="33dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/textSubtractor"
        android:paddingBottom="20sp"
        android:textSize="30sp"
        android:layout_marginStart="39dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/btn0" />

    <Button
        android:layout_width="80sp"
        android:layout_height="45sp"
        android:text="1"
        android:id="@+id/btn1"
        android:textSize="25sp"
        android:textColor="#80000000"
        android:background="#ffffffff"
        android:singleLine="false"
        android:onClick="onClickNumber"
        android:layout_below="@+id/textView1"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10sp"
        android:layout_marginTop="15sp" />

    <Button
        android:layout_width="80sp"
        android:layout_height="45sp"
        android:text="2"
        android:id="@+id/btn2"
        android:textSize="25sp"
        android:textColor="#80000000"
        android:background="#ffffffff"
        android:onClick="onClickNumber"
        android:layout_alignTop="@+id/btn1"
        android:layout_toEndOf="@+id/btn1"
        android:layout_marginLeft="10sp"
        android:layout_marginBottom="10sp" />

    <Button
        android:layout_width="80sp"
        android:layout_height="45sp"
        android:text="3"
        android:id="@+id/btn3"
        android:textSize="25sp"
        android:textColor="#80000000"
        android:background="#ffffffff"
        android:onClick="onClickNumber"
        android:layout_alignTop="@+id/btn2"
        android:layout_toEndOf="@+id/btn2"
        android:layout_marginLeft="10sp" />

    <Button
        android:layout_width="80sp"
        android:layout_height="45sp"
        android:text="4"
        android:id="@+id/btn4"
        android:textSize="25sp"
        android:textColor="#80000000"
        android:background="#ffffffff"
        android:onClick="onClickNumber"
        android:layout_below="@+id/btn2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10sp" />

    <Button
        android:layout_width="80sp"
        android:layout_height="45sp"
        android:text="5"
        android:id="@+id/btn5"
        android:textSize="25sp"
        android:textColor="#80000000"
        android:background="#ffffffff"
        android:onClick="onClickNumber"
        android:layout_alignTop="@+id/btn4"
        android:layout_alignStart="@id/btn2"
        android:layout_marginBottom="10sp" />

    <Button
        android:layout_width="80sp"
        android:layout_height="45sp"
        android:text="6"
        android:id="@+id/btn6"
        android:textSize="25sp"
        android:textColor="#80000000"
        android:background="#ffffffff"
        android:onClick="onClickNumber"
        android:layout_alignTop="@+id/btn5"
        android:layout_alignStart="@id/btn3"
        android:layout_marginBottom="10sp" />

    <Button
        android:layout_width="80sp"
        android:layout_height="45sp"
        android:text="7"
        android:id="@+id/btn7"
        android:textSize="25sp"
        android:textColor="#80000000"
        android:background="#ffffffff"
        android:onClick="onClickNumber"
        android:layout_below="@+id/btn4"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="80sp"
        android:layout_height="45sp"
        android:text="8"
        android:id="@+id/btn8"
        android:textSize="25sp"
        android:textColor="#80000000"
        android:background="#ffffffff"
        android:onClick="onClickNumber"
        android:layout_below="@+id/btn5"
        android:layout_alignStart="@+id/btn5" />

    <Button
        android:layout_width="80sp"
        android:layout_height="45sp"
        android:text="9"
        android:id="@+id/btn9"
        android:textSize="25sp"
        android:textColor="#80000000"
        android:background="#ffffffff"
        android:onClick="onClickNumber"
        android:layout_below="@+id/btn6"
        android:layout_alignStart="@+id/btn6" />

    <Button
        android:layout_width="80sp"
        android:layout_height="45sp"
        android:text="."
        android:id="@+id/btnDot"
        android:textSize="25sp"
        android:textColor="#80000000"
        android:background="#ffffffff"
        android:onClick="onClickNumber"
        android:layout_alignTop="@+id/btn3"
        android:layout_toEndOf="@+id/btn3"
        android:layout_marginLeft="10sp" />

    <Button
        android:layout_width="80sp"
        android:layout_height="45sp"
        android:text="0"
        android:id="@+id/btn0"
        android:textSize="25sp"
        android:textColor="#80000000"
        android:background="#ffffffff"
        android:onClick="onClickNumber"
        android:layout_alignTop="@+id/btn6"
        android:layout_alignStart="@id/btnDot" />

    <Button
        android:layout_width="80sp"
        android:layout_height="45sp"
        android:text="DELETE"
        android:id="@+id/btnClear"
        android:textSize="15sp"
        android:textColor="#80000000"
        android:background="#ffffffff"
        android:onClick="onClickClear"
        android:layout_alignTop="@+id/btn9"
        android:layout_alignStart="@id/btnDot" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Returnable amount:"
        android:id="@+id/textView3"
        android:textSize="25sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/textResult"
        android:layout_marginLeft="15sp"
        android:textColor="#046e32"
        android:textSize="37sp"
        android:textIsSelectable="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="DONE"
        android:id="@+id/btnDone"
        android:clickable="false"
        android:onClick="onClick"
        android:layout_above="@+id/textView3"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
